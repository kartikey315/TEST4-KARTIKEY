generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @unique @default(uuid())
  username          String
  dob               String
  phonenumber       String
  passcode          String             @unique
  referralCode      String?
  biometricPassKeys BioMetricPassKey[]
  firstName         String?
  lastName          String?
  email             String?            @unique
  country           String?
  city              String?
  address           String?
  zipCode           String?
  address2          String?
  kycStatus         KYCStatus          @default(PENDING)
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
}

model BioMetricPassKey {
  webAuthnUserID String
  credentialid   String   @id @default(uuid())
  publicKey      String
  counter        Int
  deviceType     String
  backedUp       Boolean
  transports     String[]
  user           User     @relation(fields: [userId], references: [id])
  userId         String
}

model OTP {
  id        String   @id @default(uuid())
  otp       String
  createdAt DateTime @default(now())
  expiresAt DateTime
}
